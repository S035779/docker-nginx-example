daemon off;
# Supported log levels: debug, info, notice, warn, error, crit, alert, emerg
error_log /dev/stdout {{ var "LOG_LEVEL" | default "notice" }};
user nobody nogroup;
worker_processes {{ var "WORKER_PROCESSES" | default "1" }};
events {
    worker_connections  1024;
}

http {
  include /etc/nginx/mime.types;

  server {
    listen 8080;
    server_name {{ var "SERVER_NAME" | default "example.com" }};
    access_log /dev/stdout;
    root /public;

    location / {
      index /index.html;
    }

    location /nginx_status {
      stub_status on;
      access_log off;
    }
  }
}
